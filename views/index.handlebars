{{!-- This is the body of the document. It will be inserted into main.handlebars --}}
{{!-- burger image     --}}
<div class="container-fluid">
  <div class="row">
    <div class="col s12 center-align">
      <h1 class="center-align text-warning" id="bizname">Antony's Burger</h1>
      <img class="center-align" id="logo" src="../assets/img/yummy-burger.png"></img>
     {{!-- enter a new burger and submit --}}
      <form method="POST" action="/createBurger"class="button-size text-center">
             <h3 class="center-align" id="hungryquest">What do you want to eat?</h3>
            <div class="form-group">
                <textarea type="text" class="form-control" id="newBurger" name="newBurger" rows="1" ></textarea>
            </div>
        <br>
        <br>
        <button class="waves-effect waves-light btn" style="color: black !important;" type="submit">Order it!</button>
      </form>
    </div>
  </div>
    {{!-- display burgers --}}
  <div class-"col-6">
<div class="row">
            {{!-- not devoured list --}}
            {{!-- FIX stuff here --}}
    <div class="col s12 m6">
      <ul class="collection with-header">
        <li class="collection-header center-align">
          <h5 id="title2">Order's Ready</h5></li>
          {{!-- not devoured list --}}
          <li class="collection-item avatar"></li>
                    {{!-- FIX stuff here --}}
                  <span class="title"></span>
            {{#each burgers}} {{#unless devoured}}
            </span>
            <div class="row">
                <div class="col-9">
                    <p class="form-control burger_name">
                        {{id}}. {{burger_name}}
                    </p>
                </div>                
                <div class="col-3">
                    <form method="POST" action="/devourBurger/{{id}}">
                        <button type="submit" class="btn btn-primary devourBtn">Eat It!</button>
                    </form>
                </div>
            </div>
            {{/unless}} {{/each}}
        </div>
      
    {{!-- devoured list --}}
        <div class="col s12 m6">
      <ul class="collection with-header">
        <li class="collection-header center-align">
          <h5 id="title3">Devoured Burgers</h5></li>
        {{!-- This Handlebars code says, "Display all the burgers for which devoured==true" --}} {{#each burgers}} {{#if this.devoured}}
        <li class="collection-item avatar">
          <span class="title grey-text text-darken-1">

              {{this.id}}. {{this.burger_name}}

          </span> {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>
